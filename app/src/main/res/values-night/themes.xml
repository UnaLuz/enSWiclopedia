<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnSWiclopedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nightPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/nightPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/nightPrimaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nightSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/nightSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/nightSecondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here -->
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/yellow</item>
    </style>
    <style name="Theme.EnSWiclopedia.CardView.TextView" parent="Theme.EnSWiclopedia">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/starkiller_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.EnSWiclopedia.CardView.TextView.Tint" parent="Theme.EnSWiclopedia.CardView.TextView">
        <item name="backgroundTint">@color/nightTextBackgroundTint</item>
        <item name="android:backgroundTintMode">multiply</item>
    </style>
</resources>