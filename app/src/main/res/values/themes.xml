<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnSWiclopedia" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- Search Bar style -->
    <style name="Theme.EnSWiclopedia.SearchBar" parent="Theme.EnSWiclopedia">
        <item name="android:background">@drawable/bg_rounded</item>
    </style>
    <style name="Theme.EnSWiclopedia.CardView.TextView" parent="Theme.EnSWiclopedia">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/star_jedi_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.EnSWiclopedia.CardView.TextView.Tint" parent="Theme.EnSWiclopedia.CardView.TextView">
        <item name="backgroundTint">@color/textBackgroundTint</item>
        <item name="android:backgroundTintMode">multiply</item>
    </style>
</resources>